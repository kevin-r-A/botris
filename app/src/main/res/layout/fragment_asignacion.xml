<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.Asignacion.AsignacionFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/inventoryMultibankSetting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:visibility="gone">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <CheckBox
                    android:id="@+id/accessInventoryBankTitle1"
                    style="@style/style_normal_font"
                    android:layout_width="wrap_content"
                    android:text="Bank" />

                <Spinner
                    android:id="@+id/accessInventoryBank1"
                    style="@style/style_default_spinner"
                    android:layout_margin="0dp"
                    android:layout_weight="3" />

                <TextView
                    style="@style/style_normal_font"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/readWriteOffset_title" />

                <EditText
                    android:id="@+id/accessInventoryOffset1"
                    style="@style/style_normal_font"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:inputType="numberDecimal"
                    android:text="0" />

                <TextView
                    style="@style/style_normal_font"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/readWriteSize_title" />

                <EditText
                    android:id="@+id/accessInventoryLength1"
                    style="@style/style_normal_font"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:inputType="numberDecimal"
                    android:text="2" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <CheckBox
                    android:id="@+id/accessInventoryBankTitle2"
                    style="@style/style_normal_font"
                    android:layout_width="wrap_content"
                    android:text="Bank" />

                <Spinner
                    android:id="@+id/accessInventoryBank2"
                    style="@style/style_default_spinner"
                    android:layout_margin="0dp"
                    android:layout_weight="3" />

                <TextView
                    style="@style/style_normal_font"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/readWriteOffset_title" />

                <EditText
                    android:id="@+id/accessInventoryOffset2"
                    style="@style/style_normal_font"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:inputType="numberDecimal"
                    android:text="0" />

                <TextView
                    style="@style/style_normal_font"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/readWriteSize_title" />

                <EditText
                    android:id="@+id/accessInventoryLength2"
                    style="@style/style_normal_font"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:inputType="numberDecimal"
                    android:text="2" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/default_left_padding">


            </TableRow>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.4"
                android:text="Finca:" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.50"
                android:background="@drawable/style_spinner"
                android:paddingTop="4px"
                android:paddingBottom="4px">

                <Spinner
                    android:id="@+id/finca"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="4px"
                    android:paddingBottom="4px"
                    android:theme="@style/Widget.MyApp.HeaderBar.Spinner" />
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.4"
                android:text="Bloque:" />

            <android.support.design.widget.TextInputLayout
                app:hintEnabled="false"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.50"
                android:background="@drawable/style_spinner"
                android:paddingTop="4px"
                android:paddingBottom="4px">

                <AutoCompleteTextView
                    android:id="@+id/bloque"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:textSize="14sp"
                    android:theme="@style/Widget.MyApp.HeaderBar.Spinner" />

            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.4"
                android:text="Producto:" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.50"
                android:background="@drawable/style_spinner"
                android:paddingTop="4px"
                android:paddingBottom="4px">

                <Spinner
                    android:id="@+id/producto1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="4px"
                    android:paddingBottom="4px"
                    android:theme="@style/Widget.MyApp.HeaderBar.Spinner" />
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.4"
                android:text="Variedad:" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.50"
                android:background="@drawable/style_spinner"
                android:paddingTop="4px"
                android:paddingBottom="4px">

                <Spinner
                    android:id="@+id/variedad"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="4px"
                    android:paddingBottom="4px"
                    android:theme="@style/Widget.MyApp.HeaderBar.Spinner" />
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.4"
                android:text="Tipo Producto:" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.50"
                android:background="@drawable/style_spinner"
                android:paddingTop="4px"
                android:paddingBottom="4px">

                <Spinner
                    android:id="@+id/tipoProducto"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="4px"
                    android:paddingBottom="4px"
                    android:theme="@style/Widget.MyApp.HeaderBar.Spinner" />
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:shrinkColumns="*"
            android:stretchColumns="*">

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/title_header_inventory">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="Tag(s) Mallas"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/md_white_1000" />


                    <TextView
                        android:id="@+id/inventoryRfidYield1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="0"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/md_white_1000" />
                </LinearLayout>


            </TableRow>

        </TableLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="95"
            android:gravity="center|bottom"
            android:orientation="vertical">

            <ListView
                android:id="@+id/inventoryRfidList1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="95"
                android:divider="@android:color/darker_gray"
                android:dividerHeight="0.25dp" />

            <TextView
                android:id="@+id/inventoryRfidEmpty1"
                style="@style/style_medium_font"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="95"
                android:padding="@dimen/default_padding"
                android:text="@string/notag_found"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <Button
                    android:id="@+id/inventoryRfidButtonT1"
                    style="@style/style_button_font"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="BUZ" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="invisible">

                <TextView
                    android:id="@+id/inventoryRfidRunTime1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAlignment="textStart" />

                <TextView
                    android:id="@+id/inventoryRfidFilterOn1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Filter On"
                    android:textColor="#ff0000"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/inventoryRfidVoltageLevel1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="50px">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10px"
                android:paddingTop="40px"
                android:text=""
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <Button
                android:id="@+id/btn_guardar"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/btn_ok_selector"
                android:gravity="center_vertical|center_horizontal"
                android:text="ASIGNAR"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/md_white_1000" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10px"
                android:paddingTop="40px"
                android:text=""
                android:textAppearance="?android:attr/textAppearanceSmall" />
            <Button
                android:id="@+id/inventoryRfidButton1"
                style="@style/style_button_font"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="0.5"
                android:background="@drawable/redondo"
                android:gravity="center_vertical|center_horizontal"
                android:text="INICIAR"
                android:visibility="visible" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>