<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="2dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imagen"
            android:layout_width="5dp"
            android:layout_height="110dp"
            android:scaleType="centerCrop"
            android:background="@color/colorlog"/>

        <TextView
            android:id="@+id/txt_descripcion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/imagen"
            android:paddingTop="6dp"
            android:text="Large Text"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/md_black_1000" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/txt_codigo"
            android:layout_below="@+id/txt_descripcion"
            android:layout_alignLeft="@+id/txt_descripcion"
            android:textColor="@color/md_cyan_800"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Cantidad: "
            android:id="@+id/txtcantidad"
            android:layout_below="@+id/txt_codigo"
            android:layout_alignLeft="@+id/txt_codigo"
            android:textColor="@color/md_red_A400"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/txt_bg"
            android:layout_below="@+id/txt_codigo"
            android:layout_toRightOf="@id/txtcantidad"

            android:textColor="@color/md_red_A400"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/txt_ubicacion"
            android:layout_below="@+id/txt_bg"
            android:layout_alignLeft="@+id/txt_codigo"
            android:textColor="@color/md_orange_900"/>


        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="#ffd5d5d5"
            android:id="@+id/linea">
        </View>


    </RelativeLayout>

</android.support.v7.widget.CardView>